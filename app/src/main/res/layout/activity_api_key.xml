<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ApiKeyActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="Your API key will strictly be used to only query Stock data and is stored locally. You may remove it by saving an empty key or clearing the app's data."
        android:padding="16dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Api Key"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:id="@+id/api_key_tv"
        android:layout_above="@id/api_key_et"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        android:id="@+id/api_key_et"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:selectAllOnFocus="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/save_api_button"
        android:layout_below="@id/api_key_et"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:text="Save"/>


</RelativeLayout>